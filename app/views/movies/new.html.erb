<h1>New Movie</h1>

<%= form_for :movie, url: movies_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
 <p>
    <%= f.label :year %><br>
    <%= f.text_field :year %>
  </p>
 
 <p>
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </p>
 
 <p>
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
 

  <p>
    <%= f.submit %>
  </p>
<% end %>